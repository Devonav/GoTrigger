{
  "name": "password-sync-desktop",
  "version": "0.0.0",
  "main": "dist/electron/main.js",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "rebuild": "electron-rebuild -f -w better-sqlite3,keytar,node-mac-auth",
    "postinstall": "electron-rebuild -f -w better-sqlite3,keytar,node-mac-auth || true",
    "electron:build": "tsc -p tsconfig.electron.json",
    "electron:dev": "concurrently \"npm run start\" \"wait-on http://localhost:4200 && npm run electron:build && cross-env NODE_ENV=development electron .\"",
    "electron:prod": "npm run build && npm run electron:build && electron .",
    "package:mac": "npm run build && npm run electron:build && electron-builder --mac",
    "package:win": "npm run build && npm run electron:build && electron-builder --win",
    "package:linux": "npm run build && npm run electron:build && electron-builder --linux"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "build": {
    "appId": "com.deeplyprofound.passwordsync",
    "productName": "Password Sync",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility"
    }
  },
  "dependencies": {
    "@angular/common": "^20.3.0",
    "@angular/compiler": "^20.3.0",
    "@angular/core": "^20.3.0",
    "@angular/forms": "^20.3.0",
    "@angular/platform-browser": "^20.3.0",
    "@angular/router": "^20.3.0",
    "@scure/bip39": "^2.0.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/keytar": "^4.4.0",
    "better-sqlite3": "^11.9.0",
    "electron-store": "8.2.0",
    "fast-xml-parser": "^5.3.0",
    "keytar": "^7.9.0",
    "node-mac-auth": "^1.1.0",
    "papaparse": "^5.5.3",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "tweetnacl": "^1.0.3",
    "tweetnacl-util": "^0.15.1",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular/build": "^20.3.3",
    "@angular/cli": "^20.3.3",
    "@angular/compiler-cli": "^20.3.0",
    "@electron/rebuild": "^4.0.1",
    "@types/electron-store": "^1.3.1",
    "@types/jasmine": "~5.1.0",
    "@types/node": "^24.6.1",
    "@types/papaparse": "^5.3.16",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^38.2.0",
    "electron-builder": "^26.0.12",
    "jasmine-core": "~5.9.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "typescript": "~5.9.2",
    "wait-on": "^9.0.1"
  }
}
